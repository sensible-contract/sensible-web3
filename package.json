{
  "name": "@sensible-contract/sensible-web3",
  "version": "0.2.0",
  "description": "Sensible Contract Javascript SDK",
  "main": "lib/index.js",
  "module": "es/index.js",
  "umd": "umd/sensible.min.js",
  "browser": "umd/sensible.min.js",
  "types": "lib/index.d.ts",
  "engines": {
    "node": ">=12.0.0"
  },
  "files": [
    "/es",
    "/lib",
    "/umd"
  ],
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run build:umd",
    "build:cjs": "rimraf lib && cross-env BABEL_ENV=cjs gulp build",
    "build:esm": "rimraf es && cross-env BABEL_ENV=esm gulp build",
    "build:umd": "rimraf umd && webpack",
    "build:typed": "tsc --declaration --emitDeclarationOnly --noEmit false",
    "test": "mocha -r ts-node/register test/**/*.test.ts --timeout 600000"
  },
  "keywords": [
    "sCrypt",
    "testing",
    "Smart Contract",
    "bitcoin",
    "bitcoin-sv",
    "sensible"
  ],
  "author": "sensiblecontract.org",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@sensible-contract/abstract-wallet": "^1.0.0",
    "@sensible-contract/nft-js": "^1.1.2",
    "@sensible-contract/providers": "^1.0.3",
    "@sensible-contract/rabin-signer-list": "^1.0.1",
    "@sensible-contract/token-js": "^1.1.2",
    "@sensible-contract/tx-composer": "^1.0.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@sensible-contract/wallets": "^1.0.0",
    "@types/chai": "^4.2.20",
    "@types/mocha": "^8.2.2",
    "@types/node": "^16.11.10",
    "babel-loader": "^8.2.3",
    "chai": "^4.3.4",
    "clean-webpack-plugin": "^4.0.0",
    "cross-env": "^7.0.3",
    "glob": "^7.1.7",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-typescript": "*",
    "mocha": "^9.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.3",
    "watch": "^1.0.2",
    "watchify": "^4.0.0",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  }
}
